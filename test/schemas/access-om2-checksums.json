{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Access-OM2 Checksums",
    "description": "The checksums from the model output of Access-OM2 model run",
    "type": "object",
    "properties": {
        "schema_name": {
            "type": "string",
            "const": "access-om2-checksums.json"
        },
        "schema_version": {
            "type": "string",
            "const": "access-om2-checksums-v1.0"
        },
        "output": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "field": {
                        "type": "string"
                    },
                    "checksum": {
                        "type": "string"
                    }
                },
                "required": [
                    "field",
                    "checksum"
                ]
            }
        }
    },
    "required": [
        "schema_name",
        "schema_version",
        "output"
    ]
}